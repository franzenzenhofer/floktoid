name = "floktoid"
main = "src/worker.js"
compatibility_date = "2024-01-01"

# Static assets configuration (modern Workers approach)
[assets]
directory = "./dist"
not_found_handling = "single-page-application"

# KV namespace for leaderboard
# Create with: wrangler kv:namespace create "LEADERBOARD"
[[kv_namespaces]]
binding = "LEADERBOARD"
id = "YOUR_KV_NAMESPACE_ID_HERE"

# Environment variables
[vars]
ENVIRONMENT = "production"

# Routes - Update with your domain
[[routes]]
pattern = "your-domain.com/*"
zone_name = "your-domain.com"

# Dev configuration
[dev]
port = 8787
local_protocol = "http"