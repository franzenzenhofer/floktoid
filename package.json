{
  "name": "floktoid",
  "version": "2.126.0",
  "description": "FLOCKDROID - What if the Asteroids were the good guys? Defend energy dots from evil spaceships!",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:worker\"",
    "dev:vite": "vite",
    "dev:worker": "wrangler dev --local",
    "prebuild": "npm run lint && npm run typecheck",
    "build": "vite build && npm run build:worker",
    "build:worker": "echo 'Worker uses static assets from dist/'",
    "predeploy": "npm run version:bump:minor && npm run prebuild",
    "deploy": "node scripts/deploy-with-github.js",
    "deploy:auto": "node scripts/deploy-with-github.js",
    "deploy:ultimate": "node scripts/deploy-ultimate.js",
    "deploy:test": "node scripts/post-deploy-verification.js",
    "deploy:preview": "wrangler deploy --env preview",
    "tail": "wrangler tail",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:game": "node scripts/run-game-test.js",
    "test:post-deploy": "node scripts/post-deploy-tests.js",
    "test:ai": "node scripts/ai-powered-testing.js",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:game && npm run test:ai",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "version:bump:patch": "node scripts/version-bump.js patch",
    "version:bump:minor": "node scripts/version-bump.js minor",
    "version:bump:major": "node scripts/version-bump.js major",
    "precommit": "npm run lint && npm run typecheck && npm run version:bump:patch"
  },
  "dependencies": {
    "@pixi/particle-emitter": "^5.0.8",
    "framer-motion": "^12.23.7",
    "itty-router": "^4.0.23",
    "lucide-react": "^0.525.0",
    "matter-js": "^0.20.0",
    "pixi.js": "^8.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@playwright/test": "^1.41.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.41.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "puppeteer": "^24.16.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": ">=18"
  }
}
